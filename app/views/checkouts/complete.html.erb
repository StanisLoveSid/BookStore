<ul class="steps list-inline">
<li class="step active">
<span class="step-number">1</span>
<span class="step-text hidden-xs">Address</span>
</li>
<li class="step-divider"></li>
<li class="step active">
<span class="step-number">2</span>
<span class="step-text hidden-xs">Delivery</span>
</li>
<li class="step-divider"></li>
<li class="step active">
<span class="step-number">3</span>
<span class="step-text hidden-xs">Payment</span>
</li>
<li class="step-divider"></li>
<li class="step active">
<span class="step-number">4</span>
<span class="step-text hidden-xs">Confirm</span>
</li>
<li class="step-divider"></li>
<li class="step active">
<span class="step-number">5</span>
<span class="step-text hidden-xs">Complete</span>
</li>
</ul>

<div class="text-center mb-40">
<h3 class="general-subtitle">Thank You for your Order!</h3>
<p class="fw-300">An order confirmation has been has been sent to example@gmail.com</p>
</div>

<div class="row mb-20">
<div class="col-sm-6">
<div class="visible-xs">
<p class="general-order-number mb-0">#R14526131</p>
<p class="general-address mb-30">March 17, 2017</p>
</div>
<p class="general-address"><%= current_user.first_name + current_user.last_name %><br><%= current_user.address %><br><%= current_user.city %><br><%= current_user.country %><br><%= current_user.phone %></p>
</div>
<div class="col-sm-6 hidden-xs text-right">
<p class="general-order-number mb-0">#R14526131</p>
<p class="general-address mb-30"><%= @user.orders.in_queue.last.updated_at.time %></p>
</div>
</div>

<table class="table table-hover">
<tbody><tr class="no-hover">
<th class="col-pic pl-0">
<span class="in-grey-600">Book</span>
</th>
<th class="col-title"></th>
<th class="col-price">
<span class="in-grey-600">Price</span>
</th>
<th class="col-quantity">
<span class="in-grey-600">Quantity</span>
</th>
<th class="col-total">
<span class="in-grey-600">SubTotal</span>
</th>
<th class="col-close"></th>
</tr>
  <% @user.orders.in_queue.last.order_items.each do |order_item| %>
<tr>
<td>
<div class="general-img-wrap-table">
  <% order_item.book.book_attachments.each do |photo| %>
  <%= image_tag photo.photo_url, class: "cart-img-shadow pull-left width-full" %>
<% end %>
</div>
</td>
<td>
<p class="general-title"><%= order_item.book.title %></p>
</td>
<td>
<span class="font-16 in-gold-500"><%= order_item.unit_price %></span>
</td>
<td>
<div class="input-group general-position">
<%= order_item.quantity %>
</div>
</td>
<td>
<span class="font-16 in-gold-500"><%= order_item.total_price %></span>
</td>
</tr>
  <% end %>
  </tbody></table> 

  <div class="col-sm-12">
<div class="general-text-right">
<p class="in-gold-500 font-18">Order Summary</p>
<table class="general-summary-table general-summary-table-right general-text-right">
<tbody><tr>
<td>
<p class="font-16">Subtotal:</p>
</td>
<td>
<p class="font-16"><%= number_to_currency current_user.orders.last.order_items.collect { |oi| oi.valid? ? (oi.quantity * oi.unit_price) : 0 }.sum %></p>
</td>
</tr>
<tr>
<td>
<p class="font-16">Delivery:</p>
</td>
<td>
<p class="font-16"><%= number_to_currency current_user.orders.last.delivery.price %> </p>
</td>
</tr>
<tr>
<td>
<strong class="font-18">Order Total:</strong>
</td>
<td>
<strong class="font-18"><%= number_to_currency current_user.orders.last.subtotal %></strong>
</td>
</tr>
</tbody></table>
</div>

</div>
