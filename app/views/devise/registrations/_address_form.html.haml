.well
  = simple_form_for :address, method: :patch, html: { id: "#{type}_address" } do |f|
    = f.hidden_field :addressable_type, value: type
    = f.hidden_field :addressable_id, value: user.public_send(type).try(:addressable_id)

    - [:first_name, :last_name, :address, :city, :zipcode].each do |field|
      = f.input field, input_html: { value: user.public_send(type).try(field) }
    = f.input :phone,
              input_html: { value: user.public_send(type).try(:phone) },
              placeholder: '+380971112233'
    .text-center
      = f.submit t('save_address', type: type), class: 'btn btn-primary'