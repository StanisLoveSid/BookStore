<div class="tab-content">
<div class="row mb-60">
<div class="col-sm-5">
<h4>
  <%= t('personal_info') %>
</h4>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, id: 'edit_email' }) do |f| %>
    <%= f.error_notification %>
<p class="in-gold-500 font-18 mb-25">Email</p>
    <div class="form-group mb-30">
    <%= f.text_field :email, as: :email, class: "form-input" %>
    </div>

    <div class="form-group">
    <%= f.input :first_name, class: "form-input" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>
        <%= t('waiting_email', email: resource.unconfirmed_email) %>
      </div>
    <% end %>
    <% if f.object.encrypted_password.present? %>
    <div class="form-group">
      <%= f.input :current_password, as: :password, autocomplete: 'off', class: "form-input" %>
      </div>
    <% end %>
    <div class="text-center">
      <%= f.submit "submit", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

 <div class="col-md-5 col-md-offset-1 mb-60">
<h4>
  <%= t('change_password') %>
</h4>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, id: 'edit_password' }) do |f| %>
    <%= f.error_notification %>
    <div class="form-group">
    <%= f.input :password, as: :password, autocomplete: 'off', class: "form-input" %>
    </div>
    <div class="form-group">
    <%= f.input :password_confirmation, as: :password, autocomplete: 'off', class: "form-input" %>
    </div>
    <% if f.object.encrypted_password.present? %>
    <div class="form-group">
      <%= f.input :current_password, as: :password, autocomplete: 'off', class: "form-input" %>
      </div>
    <% end %>
    <div class="text-center">
      <%= f.submit 'submit', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

</div>
</div>

  <%= button_to 'cancel', registration_path(resource_name), data: { confirm: "allah" }, method: :delete, class: 'btn btn-danger' %>