<h1 class="mt-0 mb-25">My Orders</h1>
<p class="lead small mb-10 visible-xs">Filter by</p>
<div class="dropdown general-order-dropdown mb-20">
<a aria-expanded="false" aria-haspopup="true" class="dropdown-toggle dropdown-btn width-240" data-toggle="dropdown" role="button">
<%= @status %>
<i class="fa fa-angle-down dropdown-icon"></i>
</a>
<ul class="dropdown-menu">
<li>
<%= link_to 'All', orders_path(filter: "All") %>	
</li>
<li>
<%= link_to 'Waiting for processing', orders_path(filter: "Waiting for processing") %>
</li>
<li><%= link_to 'In delivery', orders_path(filter: "In delivery") %></li>
<li>
<%= link_to 'Delivered', orders_path(filter: "Delivered") %>
</li>
</ul>
</div>
<div class="hidden-xs mb-res-50">
<table class="table table-hover">
<thead>
<tr>
<th>
<span class="in-grey-600">Number</span>
</th>
<th>
<span class="in-grey-600">Completed at</span>
</th>
<th>
<span class="in-grey-600">Status</span>
</th>
<th>
<span class="in-grey-600">Total</span>
</th>
</tr>
</thead>
<tbody>
<%= @message %>
<% @orders.each do |order| %>
<tr>
<td>
<%= link_to order.number, order_path(order), class: 'general-order-number' %>
</td>
<td>
<span class="in-grey-900 font-16 fw-300"><%= order.updated_at.time %></span>
</td>
<td>
<span class="font-16 font-weight-lightin-grey-900"><%= @status.nil? || @status == 'All' ? order.aasm.current_state : @status %></span>
</td>
<td>
<strong class="font-16"><%= number_to_currency order.subtotal %></strong>
</td>
</tr>
<% end %>
</tbody>
</table>
</div>